<% include ../partials/header %>



<div class="row">
    <h1 style="text-align: center;">Edit <%=hotel.name%></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/hotels/<%= hotel._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" name="hotel[name]" value="<%=hotel.name%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="hotel[price]" value="<%=hotel.price%>" min="0.01"
                    step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="tel" name="hotel[contact_number]" value="<%=hotel.contact_number%>">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="hotel[description]" value="<%=hotel.description%>">
            </div>
            <div class="form-group">
                <button class="btn btn-large btn-default btn-block btn-primary">Submit!</button>
            </div>
        </form>
        <a href="/">Go Back!</a>
    </div>
</div>


<% include ../partials/footer %>