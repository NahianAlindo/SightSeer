<% include ../partials/header %>



<header class="jumbotron">
    <div class="container">
        <h1>Welcome To SightSeer!</h1>
        <p>View our hand-picked accommodations from all over the world.</p>
        <p>
            <a href="/hotels/new" class="btn btn-primary btn-large">Add new Accommodation</a>
        </p>
        <p>
            <form action="/hotels" method="GET" class="form-inline">
                <div class="form-group">
                    <input type="text" name="search" placeholder="Accommodation Search" class="form-control">
                    <input type="submit" value="search" class="btn btn-default">
                </div>
            </form>
        </p>
    </div>

</header>

<div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <div>
        <% if(noMatch !== null){ %>
        <h3><%= noMatch %></h3>
        <% } %>
    </div>
    <% hotels.forEach(function(hotel){ %>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
            <img src="<%= hotel.image %>" width="320" height="240">
            <div class="caption">
                <h4><%= hotel.name %> </h4>
            </div>
            <p>
                <a href="/hotels/<%= hotel._id %>" class="btn btn-primary">More Info</a>
            </p>
        </div>

    </div>
    <% }); %>
</div>
<% include ../partials/footer %>